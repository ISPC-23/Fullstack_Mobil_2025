<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="10dp">

    <ImageView
        android:id="@+id/ivlogo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/logo_description"
        app:srcCompat="@drawable/logo_tienda_login" />

    <EditText
        android:id="@+id/etemail"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginBottom="15dp"
        android:padding="5dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:maxLines="1"
        android:hint="@string/correo_electronico" />

    <EditText
        android:id="@+id/etpassword"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginBottom="15dp"
        android:padding="5dp"
        android:inputType="textPassword"
        android:maxLines="1"
        android:hint="@string/contrasenia" />

    <CheckBox
        android:id="@+id/chbrecuerdame"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:layout_marginBottom="15dp"
        android:text="@string/recuerdame" />

    <Button
        android:id="@+id/btniniciarsesion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:backgroundTint="@color/blue_dark"
        android:text="@string/iniciar_sesion" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvsino"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sin_cuenta" />

        <TextView
            android:id="@+id/tv_registrate"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:onClick="irARegistrarse"
            android:padding="6dp"
            android:text="@string/registrate"
            android:textColor="@android:color/holo_blue_light" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvrecuperar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="@string/recuperar_contraseÃ±a"
        android:textColor="@android:color/holo_blue_light"
        android:clickable="true"
        android:focusable="true" />

</LinearLayout>
